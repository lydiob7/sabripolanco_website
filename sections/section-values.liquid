{% javascript %}
  const valueElements = [...document.querySelectorAll("[data-value-id]")];
  valueElements.forEach(elem => {
    const titleWrapper = elem.querySelector(".value_heading-wrapper")
    titleWrapper.addEventListener("click", ev => {
      elem.classList.toggle("open")
    })
  })
{% endjavascript %}

