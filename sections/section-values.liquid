{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<style>
  .our-values_section {
    border-bottom: 1px solid #000000;
  }
  .our-values_section .container {
    width: 100%;
    padding: 0;
  }
  .our-values_section .values_row {
    border-top: 1px solid #000000;
    width: 100%;
  }
  .our-values_section .values_column {
    width: 100%;
    padding: 10px 2rem;
  }
  .our-values_section .values_column .value_heading-wrapper {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    cursor: pointer;
  }
  .our-values_section .values_column:first-child {
    border-bottom: 1px solid #000000;
  }
  .our-values_section .values_row:first-child .values_column:first-child {
    border-bottom: none;
  }
  .our-values_section .section_title {
    font-family: 'Suisse Intl';
    font-size: 14px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 1.4px;
  }
  .our-values_section .values_numeration {
    align-self: flex-start;
    font-family: 'Suisse Intl';
    font-size: 14px;
    font-weight: 500;
  }
  .our-values_section .section_heading {
    font-family: 'Suisse Intl';
    font-size: 24px;
    line-height: 1.2;
    text-transform: none;
    flex: 1 1 100%;
    margin: 10px;
    letter-spacing: 0;
  }
  .our-values_section .minus-icon {
    display: none;
  }
  .our-values_section .values_column.open .minus-icon {
    display: block;
  }
  .our-values_section .values_column.open .plus-icon {
    display: none;
  }
  .our-values_section .minus-icon,
  .our-values_section .plus-icon {
    width: 20px;
    height: auto;
  }
  .our-values_section .value_body {
    max-height: 0;
    overflow: hidden;
    transition: max-height .3s ease;
  }
  .our-values_section .values_column.open .value_body {
    max-height: 100vh;
    overflow: auto;
  }
  .our-values_section .value_body_inner {
    padding: 30px 28px;
  }

  @media (min-width: 750px) {
    .our-values_section .container {
      max-width: 1250px;
      margin: 0 auto;
      padding: 0 2rem;
    }
    .our-values_section .values_flex {
      display: flex;
      align-items: stretch;
      justify-content: center;
    }
    .our-values_section .values_column {
      padding: 10px 32px;
    }
    .our-values_section .values_column:first-child {
      border-right: 1px solid #000000;
      border-bottom: none;
    }
    .our-values_section .values_row:first-child .values_column:first-child {
      border-right: none;
    }
    .our-values_section .section_heading {
      line-height: 1;
    }
  }
  @media (min-width: 1100px) {
    .our-values_section .section_heading {
      font-size: 40px;
    }
  }
</style>

