{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<style>
  .get-ready_alt_section {
    position: relative;
    display: grid;
    place-items: center;
    max-width: 100vw;
    overflow: hidden;
  }
  .get-ready_alt_section .image-container {
    position: relative;
    width: min(90vw, 1250px);
    margin: 0;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    padding: 60px 16px;
    border-radius: 40px;
    color: #ffffff;
    overflow: hidden;
  }
  .get-ready_alt_section .content {
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 1;
    text-align: center;
  }
  .get-ready_alt_section .supra_title {
    font-family: 'Suisse Intl';
    font-size: 14px;
    font-weight: 500;
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 1.4px;
  }
  .get-ready_alt_section .section_heading {
    font-family: 'SeriouslyNostalgic';
    font-size: 62px;
    line-height: 1;
    max-width: 611px;
    margin: 0 auto;
  }
  .get-ready_alt_section a {
    display: block;
    margin: 2rem auto 0 auto;
    width: max-content;
  }
  .get-ready_alt_section .button:hover {
    background-color: transparent;
    color: #ffffff;
    outline: 1px solid #ffffff;
  }
  .get-ready_alt_section .button:after,
  .get-ready_alt_section .button:not([disabled]):hover:after {
    box-shadow: none;
  }

  @media (min-width: 750px) {
    .get-ready_alt_section .image-container {
      padding: 36px 70px;
    }
    .get-ready_alt_section .section_heading {
      font-size: 100px;
    }
  }
</style>

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="section-{{ section.id }}-padding">
    <section class="get-ready_alt_section">
      <div
        class="image-container"
        style="{% if section.settings.background_image != blank %}background-image: url({{ section.settings.background_image.src | image_url }});{% else %}background-image: url(https://cdn.shopify.com/s/files/1/0651/3616/5055/files/launch-ready-banner-alt.jpg?v=1718809811);{% endif %}"
      >
        <div class="content">
          {% if section.settings.supra_title != blank %}
            <div class="supra_title">{{ section.settings.supra_title }}</div>
          {% endif %}
          {% if section.settings.heading != blank %}
            <div class="section_heading">{{ section.settings.heading }}</div>
          {% endif %}
          {% if section.settings.button_text != blank %}
            <a href="{% if section.settings.button_url != blank %}{{ section.settings.button_url }}{% else %}/pages/services/launch-ready{% endif %}">
              <button class="button">
                {{ section.settings.button_text -}}
                <span style="margin-left:.5rem;">{% render 'icon-arrow' â†’ %}</span>
              </button>
            </a>
          {% endif %}
        </div>
      </div>
    </section>
  </div>
</div>

{% schema %}
{
  "name": "Launch ready alternative",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Get Launch Ready"
    },
    {
      "type": "text",
      "id": "supra_title",
      "label": "Small text on top",
      "default": "design intensive"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "Launch ready alternative"
    }
  ]
}
{% endschema %}
