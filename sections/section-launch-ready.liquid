{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px  * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<style>
  .get-ready_section {
    position: relative;
    max-width: 100vw;
    overflow: hidden;
    padding: 0 2rem;
  }
  .get-ready_section .image-container {
    position: relative;
    width: 100%;
    max-width: min(100vw, 1250px);
    margin: 0 auto;
    padding: 0 2rem;
    background-image: url(https://cdn.shopify.com/s/files/1/0651/3616/5055/files/get-ready-img.png?v=1718629774);
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    padding: 60px 20px;
    border-radius: 40px;
    color: #ffffff;
    overflow: hidden;
  }
  .get-ready_section .floating_ticket {
    display: none;
  }
  .get-ready_section .image-container:after {
    content: '';
    z-index: 0;
    position: absolute;
    inset: 0;
    background: linear-gradient(0deg, #d28844 0.04%, #00000077 108.79%);
  }
  .get-ready_section .content {
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  .get-ready_section .supra_title {
    font-family: 'Suisse Intl';
    font-size: 14px;
    font-weight: 500;
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 1.4px;
  }
  .get-ready_section .section_heading {
    font-family: 'SeriouslyNostalgic';
    font-size: 80px;
    line-height: 1;
  }
  .get-ready_section .section_description {
    font-size: 18px;
    letter-spacing: 0;
  }
  .get-ready_section .section_heading_italics {
    font-family: 'SeriouslyNostalgic Fn It';
    font-size: 80px;
    line-height: 1.2;
    text-align: right;
  }
  .get-ready_section .button {
    background-color: #ffffff;
    color: #000000;
  }
  .get-ready_section .button:hover {
    background-color: transparent;
    color: #ffffff;
    outline: 1px solid #ffffff;
  }
  .get-ready_section .button:after,
  .get-ready_section .button:not([disabled]):hover:after {
    box-shadow: none;
  }
  .get-ready_section .bottom-separator {
    margin: 50px auto 0 auto;
    width: min(calc(100vw - 4rem), 1250px);
    padding: 0 2rem;
    display: block;
    height: 1px;
    background-color: #000000;
  }

  @media (min-width: 750px) {
    .get-ready_section .image-container {
      padding: 70px 48px 40px 48px;
    }
    .get-ready_section .floating_ticket {
      display: block;
      position: absolute;
      z-index: 2;
      bottom: 0;
      left: 32%;
      width: 250px;
      height: auto;
      object-fit: scale-down;
    }
    .get-ready_section .section_heading,
    .get-ready_section .section_heading_italics {
      font-size: 110px;
    }
    .get-ready_section .section_heading_italics {
      line-height: 1.3;
    }
    .get-ready_section .content {
      padding-bottom: 150px;
    }
    .get-ready_section .bottom-content {
      position: absolute;
      bottom: 0;
    }
    .get-ready_section .section_description {
      max-width: 300px;
    }
  }
  @media (min-width: 1100px) {
    .get-ready_section .floating_ticket {
      width: 350px;
      bottom: -20px;
      left: 32%;
    }
    .get-ready_section .section_heading,
    .get-ready_section .section_heading_italics {
      font-size: 186px;
    }
    .get-ready_section .content {
      padding-bottom: 60px;
    }
    .get-ready_section .section_description {
      max-width: 356px;
    }
  }
</style>

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="section-{{ section.id }}-padding">
    <section class="get-ready_section">
      <img
        class="floating_ticket"
        src="https://cdn.shopify.com/s/files/1/0651/3616/5055/files/receipt.png?v=1718637549"
        alt="Receipt"
        width="1169"
        height="1374"
      >
      <div class="image-container">
        <div class="content">
          {% if section.settings.sub_head != blank %}
            <h2 class="supra_title">{{ section.settings.sub_head }}</h2>
          {% endif %}
          {% if section.settings.headline != blank %}
            <div class="section_heading">{{ section.settings.headline }}</div>
          {% endif %}
          {% if section.settings.headline_italics != blank %}
            <div class="section_heading_italics">{{ section.settings.headline_italics }}</div>
          {% endif %}
          <div class="bottom-content">
            <svg width="32" height="31" viewBox="0 0 32 31" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M15.9 30.96L13.9 23.04L8.22 28.88L10.38 21.04L2.54 23.2L8.38 17.52L0.54 15.52L8.38 13.44L2.54 7.76L10.38 9.92L8.22 2.16L13.9 7.92L15.9 0.079999L17.98 7.92L23.66 2.16L21.5 9.92L29.34 7.76L23.5 13.44L31.34 15.52L23.5 17.52L29.34 23.2L21.5 21.04L23.66 28.88L17.98 23.04L15.9 30.96Z" fill="white"/>
            </svg>

            {% if section.settings.body != blank %}
              <p class="section_description">
                {{ section.settings.body }}
              </p>
            {% endif %}
            {% if section.settings.cta_text != blank %}
              <a href="/pages/services/launch-ready">
                <button class="button">
                  {{ section.settings.cta_text }}<span style="margin-left:.5rem;">{% render 'icon-arrow' → %}</span>
                </button>
              </a>
            {% endif %}
          </div>
        </div>
      </div>
      <hr class="bottom-separator">
    </section>
  </div>
</div>

{% schema %}
{
  "name": "Launch Ready",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "sub_head",
      "label": "Sub head",
      "default": "SUMMER GLOW-UP"
    },
    {
      "type": "text",
      "id": "headline",
      "label": "Headline top line",
      "default": "Get Launch Ready"
    },
    {
      "type": "text",
      "id": "headline_italics",
      "label": "Headline bottom line",
      "default": "with us"
    },
    {
      "type": "inline_richtext",
      "id": "body",
      "label": "Body",
      "default": "Your brand deserves to glow. In 12 weeks, we’ll take you from idea to launch, handling everything from visual identity to website, emails to socials. Turn heads by the end of summer, with a bold brand people can’t help but love. "
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Get Started"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "Launch Ready"
    }
  ]
}
{% endschema %}
