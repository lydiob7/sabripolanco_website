<style>
  #section-{{ section.id }} {}
  #section-{{ section.id }} .image-container {
    width: 100%;
    max-width: 1800px;
    margin: 0 auto;
    height: 100%;
    background-image: url("https://{{ section.settings.background_img.src | image_url }}");
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
  }
  #section-{{ section.id }} .content-container {
    position: relative;
    padding: 80px 0;
    max-width: 1250px;
    margin: 0 auto;
  }
  #section-{{ section.id }} .heading {
    display: none;
  }
  #section-{{ section.id }} .messages-container {
    position: relative;
    max-width: 800px;
    height: 440px;
    margin: 0 auto;
  }
  #section-{{ section.id }} .message-item {
    position: absolute;
    overflow: hidden;
    display: none;
  }
  #section-{{ section.id }} .message-item .message-text {
    position: relative;
    z-index: 4;
  }
  #section-{{ section.id }} .message-item .message-text p {
    line-height: 1.4;
    font-size: 15px;
    margin: 0;
  }
  #section-{{ section.id }} .message-item .message-text h3 {
    font-family: "Suisse Intl";
    line-height: 1;
    margin: 10px 0;
    font-weight: 500;
    font-size: 18px;
  }
  #section-{{ section.id }} .message-item-1 {
    width: 45%;
    height: 20%;
    top: 7%;
    left: 0;
    z-index: 3;
  }
  #section-{{ section.id }} .message-item-1 .message-text,
  #section-{{ section.id }} .message-item-4 .message-text {
    color: white;
    padding: 1.5rem 2rem 1.5rem 4rem;
    font-size: 14px;
    line-height: 1.4;
  }
  #section-{{ section.id }} .message-item-2 {
    width: 42%;
    height: 60%;
    top: 0;
    right: 15%;
    z-index: 1;
  }
  #section-{{ section.id }} .message-item-2 .message-text {
    padding: 2rem 2rem 2rem 3rem;
  }
  #section-{{ section.id }} .message-item-2 .message-text p {
    font-size: 15px;
  }
  #section-{{ section.id }} .message-item-3 {
    display: block;
    width: 100%;
    height: 440px;
    max-width: 400px;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
  }
  #section-{{ section.id }} .message-item-3 .message-text {
    transform: rotate(6.5deg) translate(4rem, 5rem);
    padding: 2rem 8rem 2rem 2rem;
  }
  #section-{{ section.id }} .message-item-3 .message-text p:first-child {
    margin-bottom: 6rem;
  }
  #section-{{ section.id }} .message-item-4 {
    width: 45%;
    height: 20%;
    bottom: 0;
    right: 10%;
    z-index: 3;
  }
  #section-{{ section.id }} .message-item-5 {
    width: 30%;
    height: 68%;
    bottom: 10%;
    right: 0;
    z-index: 2;
  }
  #section-{{ section.id }} .message-item-5 .message-text {
    transform: rotate(-9deg);
    padding: 4rem;
  }
  #section-{{ section.id }} .message-item-5 .message-text p {
    font-size: 12px;
  }
  #section-{{ section.id }} .message-item .message-image {
    position: absolute;
    width: 100%;
    height: 100%;
    object-fit: fill;
  }
  @media (min-width: 830px) {
    #section-{{ section.id }} .content-container {
      padding: 80px 2rem;
    }
    #section-{{ section.id }} .messages-container {
      height: auto;
    }
    #section-{{ section.id }}  .message-item {
      display: block;
    }
    #section-{{ section.id }} .message-item-3 {
      width: 55%;
      height: 70%;
      max-width: 100vw;
      bottom: 2%;
      top: auto;
      left: 0;
      transform: none;
    }
  }
  @media (min-width: 990px) {
    #section-{{ section.id }} .content-container {
      padding: 180px calc(2rem + 100px);
      min-height: 80vh;
    }
    #section-{{ section.id }} .heading {
      position: absolute;
      display: block; 
      font-family: "Suisse Intl";
      color: white;
      font-size: 50px;
      line-height: 1;
      margin: 0;
      text-transform: uppercase;
    }
    #section-{{ section.id }} .heading-top-1 {
      top: 80px;
      left: 2rem;
    }
    #section-{{ section.id }} .heading-top-2 {
      top: calc(80px + 50px);
      left: 2rem;
      transform: rotate(90deg) translate(-20px, -25px);
      transform-origin: left;
    }
    #section-{{ section.id }} .heading-bottom-1 {
      bottom: 80px;
      right: 2rem;
    }
    #section-{{ section.id }} .heading-bottom-2 {
      bottom: calc(80px + 50px);
      right: 2rem;
      transform: rotate(-90deg) translate(95%, -25px);
      transform-origin: right;
    }
    #section-{{ section.id }} .messages-container {
      height: 620px;
    }
  }
</style>
  
<section id="section-{{ section.id }}">
  <div class="image-container">
    <div class="content-container">
      {% if section.settings.heading != blank %}
        <h2 class="heading heading-top-1">{{ section.settings.heading }}</h2>
        <div class="heading heading-top-2">{{ section.settings.heading }}</div>
        <div class="heading heading-bottom-1">{{ section.settings.heading }}</div>
        <div class="heading heading-bottom-2">{{ section.settings.heading }}</div>
      {% endif %}

      <div class="messages-container">
        <div class="message-item message-item-1">
          <img class="message-image" src="https://cdn.shopify.com/s/files/1/0651/3616/5055/files/kind-words-chat-bubble.png?v=1723644852" alt="Blue Chat Bubble" width="354" height="165">
          {% if section.settings.message_1 %}
            <div class="message-text">
              {{ section.settings.message_1 }}
            </div>
          {% endif %}
        </div>
        <div class="message-item message-item-2">
          <img class="message-image" src="https://cdn.shopify.com/s/files/1/0651/3616/5055/files/kind-words-paper3.png?v=1723644852" alt="Notebook paper" width="362" height="472">
          {% if section.settings.message_2 %}
            <div class="message-text">
              {{ section.settings.message_2 }}
            </div>
          {% endif %}
        </div>
        <div class="message-item message-item-3">
          <img class="message-image" src="https://cdn.shopify.com/s/files/1/0651/3616/5055/files/kind-words-paper1.png?v=1723644851" alt="Notebook paper" width="520" height="581">
          {% if section.settings.message_3 %}
            <div class="message-text">
              {{ section.settings.message_3 }}
            </div>
          {% endif %}
        </div>
        <div class="message-item message-item-4">
          <img class="message-image" src="https://cdn.shopify.com/s/files/1/0651/3616/5055/files/kind-words-chat-bubble.png?v=1723644852" alt="Blue Chat Bubble" width="354" height="165">
          {% if section.settings.message_4 %}
            <div class="message-text">
              {{ section.settings.message_4 }}
            </div>
          {% endif %}
        </div>
        <div class="message-item message-item-5">
          <img class="message-image" src="https://cdn.shopify.com/s/files/1/0651/3616/5055/files/kind-words-paper2.png?v=1723644851" alt="Notebook paper" width="322" height="542">
          {% if section.settings.message_5 %}
            <div class="message-text">
              {{ section.settings.message_5 }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

